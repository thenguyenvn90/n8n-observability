# === DOMAIN ===
DOMAIN=example.com
SUBDOMAIN_N8N=n8n
SUBDOMAIN_GRAFANA=grafana
SUBDOMAIN_PROMETHEUS=prometheus
SSL_EMAIL=you@example.com
GENERIC_TIMEZONE=Asia/Ho_Chi_Minh

# === FQDN (auto-derived targets) ===
N8N_FQDN=${SUBDOMAIN_N8N}.${DOMAIN}
GRAFANA_FQDN=${SUBDOMAIN_GRAFANA}.${DOMAIN}
PROMETHEUS_FQDN=${SUBDOMAIN_PROMETHEUS}.${DOMAIN}

# === COMPOSE PROJECT / PROFILES ===
COMPOSE_PROJECT_NAME=n8n
# Enable monitoring by setting: COMPOSE_PROFILES=monitoring
COMPOSE_PROFILES=monitoring

# === IMAGE / RUNTIME ===
N8N_IMAGE_TAG=latest
NODE_ENV=production
N8N_LOG_LEVEL=info
N8N_DIAGNOSTICS_ENABLED=false
N8N_BLOCK_ENV_ACCESS_IN_NODE=true

# === n8n URL / COOKIES ===
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_HOST=${N8N_FQDN}
WEBHOOK_URL=https://${N8N_FQDN}
N8N_EDITOR_BASE_URL=https://${N8N_FQDN}
N8N_PUBLIC_API_BASE_URL=https://${N8N_FQDN}
N8N_SECURE_COOKIE=true

# === SECRETS (USE STRONG VALUES!) ===
# 16- and 32-byte *base64-ish* strings; store safely.
STRONG_PASSWORD=CHANGE_ME_BASE64_16_BYTES
N8N_ENCRYPTION_KEY=CHANGE_ME_BASE64_32_BYTES
RUNNERS_AUTH_TOKEN=CHANGE_ME_BASE64_16_BYTES

# UI Basic Auth (n8n editor)
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=${STRONG_PASSWORD}

# === DATABASE (Postgres) ===
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=${STRONG_PASSWORD}

# For the PostgreSQL container itself
POSTGRES_USER=n8n
POSTGRES_PASSWORD=${STRONG_PASSWORD}
POSTGRES_DB=n8n

# === QUEUE MODE (Redis/BullMQ) ===
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_PASSWORD=${STRONG_PASSWORD}
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
QUEUE_HEALTH_CHECK_ACTIVE=true

# Workers
N8N_WORKER_CONCURRENCY=5

# === EXTERNAL TASK RUNNER (Runners) ===
N8N_RUNNERS_ENABLED=true
N8N_RUNNERS_MODE=external
N8N_RUNNERS_BROKER_LISTEN_ADDRESS=0.0.0.0
N8N_RUNNERS_MAX_CONCURRENCY=5
N8N_RUNNERS_AUTH_TOKEN=${RUNNERS_AUTH_TOKEN}

# === EXECUTION BEHAVIOR ===
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336
EXECUTIONS_RETRY_MAX=3

# === MONITORING (Grafana/Prometheus via Traefik) ===
# Traefik will read this htpasswd file (mounted at ${TRAEFIK_USERSFILE})
TRAEFIK_USERSFILE=/etc/traefik/htpasswd
# Grafana internal admin login (UI after passing Traefik Basic Auth)
GRAFANA_ADMIN_PASSWORD=ChangeThisGrafanaAdminPass123!
# Expose Prometheus UI? (still gated by Traefik Basic Auth)
EXPOSE_PROMETHEUS=false
